{
  "extends": "airbnb",
  "rules": {
    "func-names": ["error", "never"],
    "indent": [2, 4],
    "no-console": "off",
    "max-len": ["error", {
      "code": 200,
      "ignoreComments": true,
      "ignoreUrls": true,
      "ignoreStrings": true,
      "ignoreTemplateLiterals": true,
      "ignoreRegExpLiterals": true,
    }],
    "import/no-dynamic-require": "off",
    "global-require": 0
  },
  "env": {
    "node": true,
    "mocha": true
  }
}
